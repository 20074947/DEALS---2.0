<div class="jumbotron text-center">
	<h1>Add a new Deal</h1>

<div ng-controller="dealController">
	<div class="row">
    <div class="col-md-6 col-md-offset-3">

      <form ng-submit="addDeal()"
        style="margin-top:30px;">
        <div class="form-group" align="center">
        <h4>Location</h4>  <select ng-model="formData.paymentOptions" class="form-control" ng-show="formData.paymentOptions" ng-options="option.name for option in options" ng-style="{'width': 100 + 'px'}">
          </select>
        </div>
        <div class="form-group" align="center">
          <h4>Price</h4>  <input type="number"
          class="form-control"
          placeholder="Amount"
          ng-model="formData.amount"
          ng-style="{'width': 100 + 'px'}"></input>
        </div>
        <div class="form-group" align="center">
          <h4>Information</h4>  <input type="text"
                 class="form-control"
                 placeholder="Information"
                 ng-model="formData.info"
                 ng-style="{'width': 100 + 'px'}"></input>
        </div>
        <button type="submit" class="btn btn-primary" style="background: #4CAF50; color: white">Add Deal</button> <button type="reset" class="btn btn-primary" style="background: #4CAF50; color: white">Reset</button>
      </form>

    </div>
  </div>
</div>